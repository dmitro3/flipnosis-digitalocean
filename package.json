{
  "name": "crypto-flipz",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node dist/server/server.js",
    "build:production": "vite build && npm run copy-server && npm run install-server-deps",
    "copy-server": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});const items=fs.readdirSync(src);for(const item of items){const srcPath=path.join(src,item);const destPath=path.join(dest,item);if(fs.statSync(srcPath).isDirectory()){copyDir(srcPath,destPath);}else{fs.copyFileSync(srcPath,destPath);}}}copyDir('server','dist/server');\"",
    "install-server-deps": "cd dist/server && npm install --production",
    "postinstall": "echo 'Frontend install complete'",
    "deploy:base": "npx hardhat run contracts/deploy-nftflip.js --network base",
    "deploy:baseSepolia": "npx hardhat run contracts/deploy-nftflip.js --network baseSepolia",
    "deploy:ethereum": "npx hardhat run contracts/deploy-nftflip.js --network ethereum",
    "deploy:sepolia": "npx hardhat run contracts/deploy-nftflip.js --network sepolia",
    "deploy:bsc": "npx hardhat run contracts/deploy-nftflip.js --network bsc",
    "deploy:bscTestnet": "npx hardhat run contracts/deploy-nftflip.js --network bscTestnet",
    "deploy:avalanche": "npx hardhat run contracts/deploy-nftflip.js --network avalanche",
    "deploy:fuji": "npx hardhat run contracts/deploy-nftflip.js --network fuji",
    "deploy:polygon": "npx hardhat run contracts/deploy-nftflip.js --network polygon",
    "deploy:mumbai": "npx hardhat run contracts/deploy-nftflip.js --network mumbai",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:contract": "npx hardhat run scripts/testContractFunctions.js --network base",
    "setup:platform-fee": "npx hardhat run scripts/setPlatformFeeReceiver.js --network base",
    "verify:base": "npx hardhat verify --network base",
    "verify:ethereum": "npx hardhat verify --network ethereum"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@openzeppelin/contracts": "^4.9.5",
    "@rainbow-me/rainbowkit": "^2.2.7",
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.12",
    "@tanstack/react-query": "^5.80.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.10.0",
    "alchemy-sdk": "^3.6.0",
    "cors": "^2.8.5",
    "ethers": "^6.8.1",
    "express": "^4.21.2",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.263.1",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.19",
    "three": "^0.170.0",
    "use-sync-external-store": "^1.5.0",
    "viem": "^2.31.2",
    "wagmi": "^2.15.6",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
