    "hardhat": "^2.25.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.32",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "util": "^0.12.5",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
